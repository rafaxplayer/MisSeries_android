<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_serie"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageSerieNotify"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitleNotifiy"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:text="Temp:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTempNotify"
            android:layout_marginTop="@dimen/temp_item_padding" />

        <TextView
            android:text="00/00/00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDateNotify"
            android:layout_marginTop="@dimen/temp_item_padding" />

        <Button
            android:text="Ver Online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginTop="@dimen/padding_buttons_vertical" />
    </LinearLayout>

</LinearLayout>