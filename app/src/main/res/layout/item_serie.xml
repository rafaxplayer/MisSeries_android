<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="5dp"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="@dimen/item_image_dimen"
            android:layout_height="@dimen/item_image_dimen"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="imagge_transition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="@dimen/card_radius"
            android:layout_weight="1">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textTemps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textNoVistos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0" />

        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_more"
            android:id="@+id/optionsButton"
            android:layout_margin="@dimen/card_radius"
            android:background="@null"
            android:padding="@dimen/temp_item_padding" />
    </LinearLayout>

</android.support.v7.widget.CardView>